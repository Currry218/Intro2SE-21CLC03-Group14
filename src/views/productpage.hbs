<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/productpage.css">
<link rel="stylesheet" href="/css/book.css">		

<div class="container">
	<div class = "card-wrapper">
		<div class = "card">
			{{#with book}}
			<!-- card left -->
			<div class = "product-imgs">
			<div class = "img-display">
				<div class = "img-showcase">
				<img src = {{imagePath}} alt = "shoe image">
				<img src = {{imagePath}} alt = "shoe image">
				<img src = {{imagePath}} alt = "shoe image">
				<img src = {{imagePath}} alt = "shoe image">
				</div>
			</div>
			<div class = "img-select">
				<div class = "img-item">
				<a href = "#" data-id = "1">
					<img src = {{imagePath}} alt = "shoe image">
				</a>
				</div>
				<div class = "img-item">
				<a href = "#" data-id = "2">
					<img src = {{imagePath}} alt = "shoe image">
				</a>
				</div>
				<div class = "img-item">
				<a href = "#" data-id = "3">
					<img src = {{imagePath}} alt = "shoe image">
				</a>
				</div>
				<div class = "img-item">
				<a href = "#" data-id = "4">
					<img src = {{imagePath}} alt = "shoe image">
				</a>
				</div>
			</div>
			</div>
			<!-- card right -->
			<div class = "product-content">
			<h2 class = "product-title">{{title}}<button onclick="addWishlist('{{../userid}}','{{id}}')" type="button" class="btn"><i class="fa fa-heart"></i></button><button type="button" class="btn"><i class="fa-solid fa-ban"></i></button></h2>
			<a href = "shop.html" class = "product-link">Store</a>

			<div class = "product-price">
				<p class = "new-price">Price: <span>${{price}}</span></p>
			</div>
	
			<div class = "product-detail">
				<h2>about this book: </h2>
				<p>
					{{description}}
				</p>
				<ul>
				<li>Author: <span>{{author}}</span></li>
				<li>Published: <span>Unknown</span></li>
				</ul>
			</div>
	
			<div class = "purchase-info">
				<!-- <input type = "number" min = "0" value = "1"> -->
				<button type = "button" class = "btn" onclick="addCart('{{../userid}}','{{id}}')">
				Add to Cart <i class = "fas fa-shopping-cart"></i>
				</button>
				{{!-- <button type = "button" class = "btn">Buy now</button>
				<button type = "button" class = "btn">Download</button> --}}
				{{#if ../showlink}}
					<a href="https://csis.pace.edu/%7Emarchese/CS389/L9/Use%20Case%20Diagrams.pdf" target="_blank" class="btn">Read online</a>
				{{/if}}
			</div>
	
			<div class = "social-links">
				<p>Share At: </p>
				<a href = "#">
				<i class = "fab fa-facebook-f"></i>
				</a>
				<a href = "#">
				<i class = "fab fa-twitter"></i>
				</a>
				<a href = "#">
				<i class = "fab fa-instagram"></i>
				</a>
				<a href = "#">
				<i class = "fab fa-whatsapp"></i>
				</a>
				<a href = "#">
				<i class = "fab fa-pinterest"></i>
				</a>
			</div>
			</div>
			{{/with}}
		</div>
		</div>
</div>

<div class="container">
	<section class="explore">
		<div class="container">
			<div class="product-head"><h1>Comment</h1></div>
<div class="comment-sesion">
	<div class="post-comment">
		{{#each reviews}}
		<div class="comment-list">
			<div class="flex">
				<div class="user">
					<div class="user-image"><img src={{User.imagePath}} alt="/img/logoicon.png"></div>
						<div class="user-meta">
							<div class="name">{{User.username}}</div>
							<div class="day">{{showDate createdAt}}</div>
						</div>
				</div>
					<!-- <div class="reply">
						<div class="lick icon"><i class="fa fa-thumbs-o-up"></i></div>
						<div class="dislick icon"><i class="fa fa-thumbs-o-down"></i></div>
						<div class="re-comment">Reply</div>
					</div> -->
			</div>
				<div class="comment">
					{{content}}
				</div>
		</div>
		{{/each}}
			<form action="" class="comment-box">
				{{#with user}}
				<div class="user">
					<div class="img-u"><img src={{imagePath}} alt="/img/logoicon.png"></div>
					<div class="name">{{username}}</div>
				</div>
				<textarea name="comment"></textarea><div class="row"></div>
				<button class="comment-submit">Comment</button>
				{{/with}}
			</form>
		</div>
	</div>
</div>
</div>

<div class="container">
	<section class="explore">
		<div class="container">
			<div class="explore-content">
			<div class="product-head">
				<h1>Reccomend books</h1>
				<div class="row">
				{{#each rcm}}
					<div class="col">
						<div class="single-explore-item">
						<div class="single-explore-img">
							<a href = "productpage.html"><img src={{imagePath}} alt="/img/logoicon.png"></a>
						</div>
						<div class="single-explore-txt bg-theme-5">
							<h2><a href="productpage.html">{{title}}</a></h2>
							<p class="explore-rating-price">
							<span class="explore-price-box">
								price:
								<span class="explore-price">{{price}}</span>
							</span>
							<span class="explore-price-genne">
								novel {{!-- thiáº¿u genre --}}
							</span>
							<a  href="#!">{{author}}</a>
							</span>
							</p>
						</div>
						</div>
					</div>
				{{/each}}
				</div>
			</div>
	
			</div>
		</div>
		</section><!--/.explore-->
</div>