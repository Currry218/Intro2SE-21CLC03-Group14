<section class="explore">
  <div class="container">
    <div class="explore-content">

      <div class="product-head">
        <h1>New post</h1>
        <div class="row">
          {{#each waitingbooks}}
          <div class="col">
            <div class="single-explore-item">
              <div class="single-explore-img">
                <a href = #!><img src={{imagePath}} alt="explore image"></a>
              </div>
              <div class="single-explore-txt bg-theme-5">
                <h2><a href="#!">{{title}}</a></h2>
                <p class="explore-rating-price">
                  <a href="shop.html">{{owner}}</a>   <!-- shop name -->
                  <span class="explore-price-box">
                    price:
                    <span class="explore-price">${{price}}</span>
                  </span>
                  <a  href="#!">{{author}}</a>
                </p>
                <div class="text_report">
                <p>{{description}}</p>
                </div>
              </div>
              <div class="action-buttons">
                <button onclick="updateBook('{{id}}')" class="accept-btn">Accept</button>
                <button onclick="deleteBook('{{id}}')" class="remove-btn">Remove</button>
            </div>
            </div>
          </div>
          {{/each}}

        </div>
          
      </div>
    </div>
  </div>    
</section><!--/.explore-->

<script>
  function updateBook(id) {
    let data = {"id": id}
    $.ajax({
        type: 'PUT',
        url: '/admin/updatebook',
        contentType: 'application/json',
        data: JSON.stringify(data), // access in body
    }).done(function () {
        console.log('SUCCESS');
    }).fail(function (msg) {
        console.log('FAIL');
    }).always(function (msg) {
        console.log('ALWAYS');
    });
  }
  function deleteBook(id) {
    let data = {"id": id}
    $.ajax({
        type: 'DELETE',
        url: '/admin/deletebook',
        contentType: 'application/json',
        data: JSON.stringify(data), // access in body
    }).done(function () {
        console.log('SUCCESS');
    }).fail(function (msg) {
        console.log('FAIL');
    }).always(function (msg) {
        console.log('ALWAYS');
    });
  }
</script>