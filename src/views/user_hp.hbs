  <!--Content-->
  <section class="explore">
    <div class="container">
      <div class="explore-content">
        
        <div class="space"></div>

        <form action="/fileupload" method="POST" enctype="multipart/form-data">
            <input type="file" name="file" />
            <button type="submit">Submit</button>
        </form>
        
        <div class="product-head">
          <h1>New books</h1>
         <div class="row row-cols-5">
          {{#each newbooks}}
          <div class="col">
            <div class="single-explore-item">
              <div class="single-explore-img">
                <a href = "/{{../userid}}/details/{{id}}"><img src={{imagePath}} alt="/img/logoicon.png"></a>
              </div>
              <div class="single-explore-txt bg-theme-5">
                <h2><a href="/{{../userid}}/details/{{id}}">{{title}}</a></h2>
                <p class="explore-rating-price">
                  <span class="explore-price-box">
                    price:
                    <span class="explore-price">{{price}}</span>
                  </span>
                  <span class="explore-price-genne">
                    novel {{!-- thiếu genre --}}
                  </span>
                  <a  href="#!">{{author}}</a>
                  </span>
                </p>
              </div>
            </div>
          </div>
          {{/each}}
          </div>
        </div>
        
        <div class="product-head">
          <h1>Trending books</h1>
         <div class="row row-cols-5">
          {{#each trendingbooks}}
          <div class="col">
