                  </span>
                  <span class="explore-price-genne">
                    novel {{!-- thiếu genre --}}
                  </span>
                  <a  href="#!">{{author}}</a>
                  </span>
                </p>
              </div>
            </div>
          </div>
          {{/each}}
          </div>
        </div>

        <div class="product-head">
          <h1>All books</h1>
         <div class="row row-cols-5">
          {{#each allbooks}}
          <div class="col">
            <div class="single-explore-item">
              <div class="single-explore-img">
                <a href = "/{{../userid}}/details/{{id}}"><img src={{imagePath}} alt="/img/logoicon.png"></a>
