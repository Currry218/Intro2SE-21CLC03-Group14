                    novel {{!-- thiếu genre --}}
                  </span>
                  <a  href="#!">{{author}}</a>
                  </span>
                </p>
              </div>
            </div>
          </div>
          {{/each}}
          </div>
        <div class="note d-flex justify-content-end"><a href="/{{{userid}}}/all">More >> </a></div>
      </div>
    </div>
  </section><!--/.explore-->
